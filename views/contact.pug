extends default

block content
  div.container

  
    form(method='POST' action='/processContact')
        table(style='margin-left: auto; margin-right: auto;')
            tr(style='text-align: center;')
                td(colspan='2')
                    h3 We'd love to hear from you!
            tr
                td 
                    label(for='name') Name:
                td 
                    input#name(type='text' name='name')
            tr
                td 
                    label(for='email') Email:
                td 
                    input#email(type='text' name='email')
            tr
                td  
                    label(for='content') Comments or 
                        br
                        | Questions:
                td 
                    textarea#content(type='text' name='content'  cols='20' rows='5')
            tr(style='text-align: center;')
                td(colspan='2')
                    input(type='submit' value='Submit') 